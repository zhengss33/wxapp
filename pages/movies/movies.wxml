<!--pages/movies/movies.wxml-->
<view class='movie-container page'>
  <scroll-card class="section" title="正在热映" url="../movies/movies-more/movies-more?category=正在热映">
    <movie-list movies="{{in_theaters.movies}}"></movie-list>
  </scroll-card>

  <scroll-card class="section" title="即将上映" url="../movies/movies-more/movies-more?category=即将上映">
    <movie-list movies="{{coming_soon.movies}}" isRating="{{false}}"></movie-list>
  </scroll-card>

  <ranking-list class="section" rankingList="{{[weekly, new_movies, top250]}}"></ranking-list>
</view>