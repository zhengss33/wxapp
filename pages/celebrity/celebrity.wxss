/* pages/celebrity/celebrity.wxss */
@import '/template/title/title.wxss';

.celebrity-container {
  padding: 30rpx;
  color: #666;
}

.name {
  padding: 5 0rpx;
  font-size: 20px;
  color: #333;
}

.name_en {
  font-size: 12px;
  color: #999;
}

.celebrity-info {
  margin-top: 20rpx;
}

.avatar {
  width: 200rpx;
  height: 280rpx;
  display: inline-block;
}

.avatar image {
  display: block;
  width: 100%;
  height: 100%;
}

.info-list {
  display: inline-block;
  width: 68%;
  margin-left: 20rpx;
  font-size: 12px;
  line-height: 1.6;
  vertical-align: top;
}

.celebrity-intro {
  margin-top: 20rpx;
}

.section {
  margin-top: 20rpx;
}